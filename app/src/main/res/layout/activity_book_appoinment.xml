<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background2"
    tools:context=".activity.BookAppoinmentActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health Guard"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="35dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book Appointment"
        android:textColor="#E14514"
        android:textStyle="bold"
        android:id="@+id/tvTitle"
        android:textSize="35dp"
        android:layout_marginTop="20dp"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext"
            android:orientation="vertical"
            android:padding="24dp">

            <EditText
                android:id="@+id/edittextAppFullName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_person"
                android:ems="10"
                android:inputType="textPersonName"
                android:drawablePadding="8dp"
                android:hint="Full Name"
                android:padding="8dp" />

            <EditText
                android:id="@+id/edittextAppAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_add_location_24"
                android:drawablePadding="8dp"
                android:backgroundTint="@color/white"
                android:hint="Address"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="8dp" />

            <EditText
                android:id="@+id/edittextAppContactnumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_add_call_24"
                android:drawablePadding="8dp"
                android:backgroundTint="@color/white"
                android:hint="Contact Number"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="8dp" />

            <EditText
                android:id="@+id/edittextAppfees"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_attach_money_24"
                android:drawablePadding="8dp"
                android:backgroundTint="@color/white"
                android:hint="Fees"
                android:inputType="textPersonName"
                android:padding="8dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="start">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="choose a date"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="30dp"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/buttonAppDate"
                        style="?android:spinnerStyle"
                        android:layout_marginTop="10dp"
                        android:text="12/12/2001"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="Time"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/buttonAppTime"
                        style="?android:spinnerStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="10.20" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/buttonBookAppointment"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#E14514"
                android:gravity="center_horizontal"
                android:text="Book Appointment"
                android:textAllCaps="true"
                android:textSize="22sp"
                app:cornerRadius="20dp" />



    <Button
        android:id="@+id/buttonAppBack"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:backgroundTint="#0E1C8C"
        android:layout_gravity="center"
        android:text="Back"
        android:layout_marginTop="5dp"
        android:textAllCaps="true"
        android:textSize="22sp"
        app:cornerRadius="20dp" />
</LinearLayout>
</LinearLayout>